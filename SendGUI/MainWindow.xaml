<Window x:Class="SendGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SendGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Button x:Name="StartButton" Content="Iniciar" Click="StartButton_Click" />
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Código da Falha: "></TextBlock>
                <TextBox x:Name="faultValue" Text="DF1"></TextBox>
            </StackPanel>
            <Button x:Name="AddFault" Content="Adicionar Falha" Click="AddFault_Click"/>
            <Button x:Name="RemoveFault" Content="Remover Falha" Click="RemoveFault_Click"/>
        </StackPanel>
    </Grid>
</Window>
